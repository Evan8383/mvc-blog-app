<a href="/dashboard" class="go-back flex items-center mt-4 text-blue-500 hover:text-blue-700">&larr; Back to dashboard</a>

<article class="new-page mt-8">
  <section class="edit-form-page bg-white p-4 rounded shadow-md">
    <div class="form-heading mb-4">
      <h2 class="text-2xl font-bold">Edit Post</h2>
    </div>
    <div class="form-section">
      <form class="edit-post-form">
        <div class="post-title-section mb-4">
          <label for="post-title" class="block text-gray-700">Title</label>
          <input type="text" name="post-title" id="post-title" value="{{post.title}}" class="entry-field border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" />
        </div>
        <div class="post-content mb-4">
          <label for="post-content" class="block text-gray-700">Content</label>
          <textarea class="entry-field border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" id="post-content" name="post-content">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Update post</button>
        <button type="button" class="delete-post-btn ml-4 btn bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Delete post</button>
      </form>
    </div>
  </section>
</article>

{{#if loggedIn}}
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
{{/if}}
