<section class="sign-in-page flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="form-heading">
    <h1 class="text-3xl font-bold mb-8">Sign Up</h1>
  </div>
  <div class="form-section bg-white p-8 rounded shadow-md">
    <form class="signup-form">
      <div class="mb-4">
        <label for="username-signup" class="block text-gray-700">Select a Username</label>
        <input type="text" class="entry-field border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" id="username-signup" />
      </div>
      <div class="mb-4">
        <label for="password-signup" class="block text-gray-700">Select a password</label>
        <input type="password" class="entry-field border border-gray-300 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:border-blue-500" id="password-signup" />
      </div>
      <div class="mb-4">
        <button type="submit" class="login-signup-btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Sign Up!</button>
      </div>
    </form>
  </div>
  <a href="/login" class="login-link mt-4 text-blue-500 hover:text-blue-700">log in instead</a>
</section>

<script src="/js/signup.js"></script>
