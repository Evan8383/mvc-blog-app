<section class="new-post-section">
  <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    id="create-new-post">New Post</button>
</section>

{{#if posts.length}}
<section>
  <h2 class="text-xl font-bold mb-4">Your Dashboard</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li class="mb-4">
      {{> post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link text-blue-500 hover:text-blue-700">edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/js/create-post.js"></script>