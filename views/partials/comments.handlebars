<div class="comments mt-8">
    {{#each this}}
    <section class="comment bg-white p-4 rounded shadow-md mb-4">
        <div class="meta text-gray-600 text-sm mb-2">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>
